@using Microsoft.AspNetCore.Identity;
@using ReversiMvcApp.Data;

@model UserDetailsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>User</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.User.Id" />
            <div class="form-group">
                <label asp-for="@Model.User.Email" class="control-label"></label>
                <input asp-for="@Model.User.Email" class="form-control" disabled="" />
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Email" class="control-label"></label>
                <input asp-for="@Model.User.Email" class="form-control" />
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Claim" class="control-label"></label>
                @{
                    // Imagine being C# and not being able to place BASIC if-statement inside an attribute.
                    // Forcing me to go all the way to timbuktu to make a select list with a preselected option.
                    var claimValues = new List<string> { "Speler", "Mediator", "Admin" };
                }
                @Html.DropDownListFor(model => model.Claim, new SelectList(claimValues), new { @class = "form-control" })

                <span asp-validation-for="@Model.Claim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>